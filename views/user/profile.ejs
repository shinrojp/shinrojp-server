<% include ../header.ejs %>


<div class="container">
	<div class="row">
	<br>
		<div class="col-md-2">
			<%  var menu = "profile"; %>
			
			<% include menu.ejs %>
		</div>
		<div class="col-md-10">
			<div class="panel panel-default">
				<div class="panel-heading"><h3 class="panel-title"><%=texts.PROFILE%></h3></div>
				
				<div class="container-fluid row">
					<form class="col-xs-6">
					<div class="form-group">
					    <label for="user_pciture"><%=texts.PROFILE_PICTURE%></label>
					    <div class="row">
						    <div class="col-md-4">
						    	<img src="http://placehold.it/120x120" alt="" class="img-rounded">
						    </div>
						    <div class="col-md-8">
						   
						        <span class="btn-file btn btn-default">
							    <%=texts.UPLOAD_NEW_PICTURE%> <input type="file" id="user_pciture">
							    </span>
							    <p class="help-block"><%=texts.YOU_CAN_ALSO_DRAG%></p>
							    
						    </div>
					    </div>
					   
					  </div>
					  
					  <div class="form-group">
					    <label for="user_display_name"><%=texts.DISPLAY_NAME%></label>
					    <input type="text" class="form-control" id="user_display_name" placeholder="">
					  </div>
					  
					   <div class="form-group">
					    <label for="user_fname"><%=texts.FIRST_NAME%></label>
					    <input type="text" class="form-control" id="user_fname" placeholder="">
					  </div>
					  
					  <div class="form-group">
					    <label for="user_lname"><%=texts.LAST_NAME%></label>
					    <input type="text" class="form-control" id="user_lname" placeholder="">
					  </div>
					  
					   <div class="form-group">
					    <label for="user_gender"><%=texts.GENDER%></label>
					    <select class="form-control" id="user_gender">
						    <option value=""><%=texts.NOT_SPECIFIED%></option>
						    <option value=""><%=texts.MALE%></option>
							<option value=""><%=texts.FEMALE%></option>
					    </select>
					  </div>
					 
					  <div class="form-group">
					  <button type="submit" class="btn btn-success"><%=texts.SAVE%></button>
					  </div>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>
    
<% include ../footer.ejs %>