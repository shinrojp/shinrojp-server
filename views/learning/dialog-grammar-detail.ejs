<!-- The Modal start -->
<div class="modal dialog" id="dialog-g-<%= grammar._id %>">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title">Grammar</h4>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<!-- Modal body -->
			<div class="modal-body">
				<div class="col-md-24">

					<!-- Content -->
					<div class="form-group">
						<div class="form-group"><%= grammar.content %></div>
					</div>
					<!-- Input mean -->
					<div class="form-group">
						<div class="form-group"><%= grammar.mean %></div>
					</div>
					<!-- Input Use -->
					<div class="form-group">
						<div class="form-group"><%= grammar.use %></div>
					</div>
					<!-- Input Note -->
					<div class="form-group">
						<div class="form-group"><%= grammar.note %></div>
					</div>
					<h4 class="modal-title">Example</h4>
					<!-- Example -->
					<% grammar.example.forEach(function(example,index) { %>

					
					<div style="display: inline-block;
						width: 100%;
						height: 70px;
						margin: 6px;						
						background-color: #dddddd;">
						<p style="color: red;"><%= example.sentence %></p>
						<p><%= example.vi %></p>
						<div style="display: inline; position: relative;">
							<button class="btn btn-sm btn-icon btn-pure btn-default on-editing m-r-5 button-save"
								hidden><i class="fa fa-pencil" aria-hidden="true"></i></button>
							<button class="btn btn-sm btn-icon btn-pure btn-default on-editing button-discard"
								data-toggle="tooltip" data-original-title="Discard" hidden><i class="fa fa-times-circle"
									aria-hidden="true"></i></button>
						</div>
					</div>
					<% }); %>

				</div>
			</div>
			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="submit" id="loginSubmit" class="btn btn-success loginFormElement">Add
					Grammar</button>
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
			</div>

		</div>
	</div>


</div>
<!-- The Modal end -->